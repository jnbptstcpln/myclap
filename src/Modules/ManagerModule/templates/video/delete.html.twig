{% extends '/layout_manager.html.twig' %}

{% block page_title %}
    myCLAP Manager - Modifier "{{ video.name }}"
{% endblock %}

{% block content %}

    <div class="header-center no-border">
        <div>
            <h2>{{ video.name }}</h2>
            <h1>Supprimer</h1>
        </div>
    </div>

    <div class="overlay p-20 max-w-1000 ms-auto br-5">

        <form method="{{ form.method }}" action="{{ form.action }}" enctype="{{ form.enctype }}" class="mb-0">

            <div class="mb-25">
                {% include '/flash/success.html.twig' %}
            </div>

            {{ form.csrf_token|render }}

            {% if form.errors|length > 0 %}
                <div class="p-10">
                    <div class="alert alert-error">
                        {% if form.errors|length > 1 %}
                            <ul>
                                {% for error in form.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>{{ form.errors.get(0).message }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <p>Êtes-vous sûr de vouloir supprimer cette vidéo ? Cette opération est irréversible !</p>

            <hr class="mt-25 mb-15">

            <div class="text-right">
                <a class="button" href="{{ route_url('manager-video-edit', video.token) }}">Annuler</a>
                <button class="button red" type="submit">Supprimer</button>
            </div>
        </form>
    </div>
{% endblock %}