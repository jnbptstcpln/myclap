{% extends '/layout.html.twig' %}

{% block page_title %}{{ video.name }}{% endblock %}

{% block meta %}
    <meta property="og:image" content="{{ route_url('watch-media-thumbnail', video.token, 1080) }}" />
{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="/static/plyr/plyr.css">
    <style>
        /** ----- PLYR ----- */
        .plyr--full-ui input[type=range] {
            color: red !important;
        }
        .plyr__control--overlaid {
            background: rgba(255, 5, 2, 0.8) !important;
        }
        .plyr--video .plyr__control.plyr__tab-focus, .plyr--video .plyr__control:hover, .plyr--video .plyr__control[aria-expanded=true] {
            background: red !important;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="video-container placeholder">
        <div class="video-placeholder">
            <div class="layout center">
                <div class="text-center">
                    <div class="icon">
                        <i class="fad fa-user-lock"></i>
                    </div>
                    <p class="ful">
                        Vous devez être connecté pour regarder cette vidéo.
                    </p>
                    <div class="text-center">
                        <a class="button red" href="{{ route_url('user-login') }}">Me connecter</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="info">
            <div>
                <div class="placeholder">
                    <div style="width: 70%; max-width: 400px; height: 33px; background-color: rgba(255,255,255,0.2)"></div>
                </div>
                <div class="placeholder">
                    <div style="width: 45%; max-width: 290px; height: 14px; background-color: rgba(255,255,255,0.15)"></div>
                </div>
            </div>

            <hr>

            <div class="placeholder">
                <div style="width: 100%; height: 10px; background-color: rgba(255,255,255,0.1)"></div>
            </div>

            <div class="placeholder">
                <div style="width: 100%; height: 10px; background-color: rgba(255,255,255,0.1)"></div>
            </div>

            <div class="placeholder">
                <div style="width: 100%; height: 10px; background-color: rgba(255,255,255,0.1)"></div>
            </div>

            <div class="placeholder">
                <div style="width: 20%; height: 10px; background-color: rgba(255,255,255,0.1)"></div>
            </div>

        </div>

    </div>
{% endblock %}