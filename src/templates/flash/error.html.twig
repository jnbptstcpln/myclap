{% set flashes = app.flashes('error') %}
{% if flashes %}
    <div class="alert alert-error">
        {% if flashes|length > 1 %}
            <ul>
                {% for flash in flashes %}
                    <li>{{ flash.message }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ flashes[0].message|nl2br }}</p>
        {% endif %}
    </div>
{% endif %}